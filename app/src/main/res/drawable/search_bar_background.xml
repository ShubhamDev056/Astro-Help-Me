<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color of the search bar -->

    <corners android:radius="12dp" /> <!-- Rounded corners -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Light border color -->

    <shadow android:color="#55000000" android:radius="8dp" /> <!-- Optional shadow -->
</shape>
